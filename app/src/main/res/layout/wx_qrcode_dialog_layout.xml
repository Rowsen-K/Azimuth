<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout android:layout_width="240dp"
        android:layout_height="315dip"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:id="@+id/dialog_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="15dp"
            android:src="@drawable/ic_close"
            android:onClick="close"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/dialog_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Rowsen"
                android:textColor="@color/app_text_color"
                android:textSize="17sp" />
<TextView
    android:id="@+id/dialog_job_no_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/dialog_name_view"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:text="微信号:rzcs0608"
    android:textColor="@color/focus_text_color"
    android:textSize="15sp" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="164dp"
            android:layout_height="174dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/dialog_qrcode_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/rowsen"/>

        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="请关注微信反馈BUG"
            android:textColor="@color/focus_text_color"
            android:textSize="15sp" />
    </LinearLayout>