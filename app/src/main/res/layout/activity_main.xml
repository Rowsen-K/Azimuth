<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_compass"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/ll_compassmain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="104.0">
        <com.rowsen.myapplication.SizeNotiRelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="62.0">
            <RelativeLayout
                android:id="@+id/rl_cp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <com.rowsen.myapplication.CompassRotationViews
                    android:id="@+id/znzImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/yeguangluopan"
                    android:visibility="gone"/>
                <com.rowsen.myapplication.CompassRotationViews
                    android:id="@+id/logoImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/nullpic"
                    android:visibility="gone"/>
                <com.rowsen.myapplication.CompassView
                    android:id="@+id/compassview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />
                <ImageView
                    android:id="@+id/clickImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/nullpic" />
                <RelativeLayout
                    android:id="@+id/rl_crossline"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <View
                        android:id="@+id/line_w"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_centerInParent="true"
                        android:background="#88ffffff"
                        android:visibility="gone"/>
                    <View
                        android:id="@+id/line_h"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:layout_centerInParent="true"
                        android:background="#88ffffff"
                        android:visibility="gone"/>
                    <View
                        android:id="@+id/arraw_down"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_arrawdown" />
                </RelativeLayout>
            </RelativeLayout>
            <ImageButton
                android:id="@+id/menuCameraMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@null"
                android:src="@drawable/ic_menu_camera" />
            <ImageButton
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@null"
                android:src="@drawable/ic_menu_mapmode" />
            <ImageButton
                android:id="@+id/skinButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginBottom="15.0dip"
                android:background="@null"
                android:src="@drawable/ic_skin" />
            <ImageButton
                android:id="@+id/northButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="15.0dip"
                android:background="@null"
                android:src="@drawable/ic_north" />
        </com.rowsen.myapplication.SizeNotiRelativeLayout>
        <LinearLayout
            android:id="@+id/compass_below_layout"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="42.0"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/button_group_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ff212021"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2.0dip"
                android:weightSum="100.0">
                <Button
                    android:id="@+id/calibrate_textview"
                    android:layout_width="0.0dip"
                    android:layout_height="34.0dip"
                    android:layout_weight="20"
                    android:background="@color/green"
                    android:gravity="center"
                    android:paddingTop="2.0dip"
                    android:paddingBottom="2.0dip"
                    android:text="计算"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/azimuth_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:layout_weight="60"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/azimuth_type_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真北"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/azimuth_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="0°"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/direction_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="北"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/hold_textview"
                    android:layout_width="0.0dip"
                    android:layout_height="34.0dip"
                    android:layout_weight="20"
                    android:background="@color/green"
                    android:gravity="center"
                    android:paddingTop="2.0dip"
                    android:paddingBottom="2.0dip"
                    android:text="锁定"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/info_viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:src="@drawable/nullpic"/>
                <LinearLayout
                    android:id="@+id/info_pageindicator"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:background="#ff212021"
                    android:gravity="center"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>